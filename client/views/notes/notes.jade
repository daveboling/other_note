.row
  .columns.small-2
  .columns.small-8.small-centered
    form.noteForm(novalidate name='noteForm')
      label Title
      input(type='text', ng-model='note.title')
      label Body
      textarea(type='text', ng-model='note.body')
      label Tags
      input(type='text', ng-model='note.tags')

  .columns.small-2


.row
  .small-4.columns 
  .small-4.small-centered.columns 
    button(ng-file-select ng-model="files" multiple="true") Attach Photos
    button(ng-click='create(note)') Create
    h5(ng-show='files.length') {{files.length}} Photo(s) Added
      .filenames
       .file(ng-repeat='f in files') {{f.name}}
  .small-4-4.columns